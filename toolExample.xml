<tool id="Dialign" name="Dialign" version="2.2.1">
  <description>for each sequence in a file</description>
  <environment_variables>
    <environment_variable name="DIALIGN2_DIR">/home/gary/git/galaxy/tools/dialign/dialign_package/dialign2_dir</environment_variable>
  </environment_variables>
  <!--
  <command>/home/gary/git/galaxy/tools/dialign/dialign_package/src/dialign2-2 -thr 0 -fa -fn $output $input</command>
  -->
  <command>docker run --memory 4096m --cpuset-cpus 1 --entrypoint='/dialign' -v /home/gary/git/galaxy/database/files/000:/home/gary/git/galaxy/database/files/000:rw local/dialign:1.0 -thr 0 -fa -fn $output</command>
